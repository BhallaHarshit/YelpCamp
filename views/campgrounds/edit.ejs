<%- include("../partials/header") %>

<div class="container">
    <h1 style="text-align: center; margin-bottom: 35px;">Edit: <%= campground.name %></h1>
    
    <div style="width: 30%; margin: 0 auto;">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="data[name]" value="<%= campground.name %>">
            </div>

            <div class="form-group">
                <input class="form-control" type="number" name="data[price]" value="<%= campground.price %>" min="0.0" step="0.1">
            </div>
            
            <div class="form-group">
                <input class="form-control" type="text" name="data[image]" value="<%= campground.image %>">
            </div>

            <div class="form-group">
                <input class="form-control" type="text" name="data[description]" value="<%= campground.description %>">
            </div>
            
            <div class="form-group">
                <button class="btn btn-success btn-block">Submit</button>
            </div>
            
        </form>
        <a href="/campgrounds/<%= campground._id %>">Get Back</a>
    </div>
</div>
<%- include("../partials/footer") %>