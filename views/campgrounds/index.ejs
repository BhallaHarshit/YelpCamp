<%- include("../partials/header") %>

<div class="container">

    <div class="jumbotron">
        <div class="container">
            <h1 class="display-4">Welcome to Yelpcamp</h1>
            <p class="text-muted">The Best Campgrounds from all over the world</p>
            <a class="btn btn-primary btn-sm" href="/campgrounds/new">Add a new campground!</a>
        </div>
    </div>

    <div class="row">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="card">
                    <img class="card-img-top" src="<%= campground.image %>">

                    <div class="card-body text-center">
                        <h5 class="card-title"><%= campground.name %></h5>
                        <a href="/campgrounds/<%= campground._id %>" class="card-link">More Info</a>
                    </div>
                    
                </div>
            </div>
        <% }); %>
    </div>
        
</div>

<%- include("../partials/footer") %>